<resources>
  <!-- Base application theme. -->
  <style name="Theme.Cba.Assignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>
    <item name="colorAccent">@color/colorOnPrimary</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorOnPrimary</item>
    <item name="colorSecondaryVariant">@color/colorOnPrimary</item>
    <item name="colorOnSecondary">@color/colorPrimary</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    <item name="android:windowLightStatusBar">true</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.Cba.Assignment.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.Cba.Assignment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.Cba.Assignment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>